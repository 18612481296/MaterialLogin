<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.SelectableItemTheme">
        <item name="colorControlHighlight">@color/accent</item>
    </style>
    <style name="AppTheme.SelectableItemBackground">
        <item name="android:theme">@style/AppTheme.SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.TextAppearanceDark" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/background_material_light</item>
        <item name="android:textColorHint">@color/bright_foreground_disabled_material_dark</item>
        <item name="colorControlActivated">@color/background_material_light</item>
        <item name="colorControlHighlight">@color/background_material_light</item>
    </style>
</resources>
