<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3">

    <shem.com.materiallogin.LoginView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loginTitle="Customized login"
        app:loginHint="Email"
        app:loginPasswordHint="Pin code"
        app:loginActionText="LOGIN"
        app:registerTitle="Join us"
        app:registerHint="Email"
        app:registerPasswordHint="First name"
        app:registerRepeatPasswordHint="Last name"
        app:registerActionText="SIGN UP"
        app:registerIcon="@drawable/ic_person_add_white_24dp"/>
</FrameLayout>
